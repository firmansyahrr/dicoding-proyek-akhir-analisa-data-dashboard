{
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "always",
            "source.organizeImports": "always",
            "source.addMissingImports": "always",
            "source.removeUnusedImports": "always"
        }
    },
}
